---
import { MIN_SIDE_URL } from "astro:env/server";
import { fetchDecoratorReact } from "@navikt/nav-dekoratoren-moduler/ssr";
import type { Language } from "../language/language";
import { text } from "../language/text";
import { getDecoratorEnvironment } from "../utils/environment";
import styles from "./Layout.module.css";

const language = Astro.currentLocale as Language;

const Decorator = await fetchDecoratorReact({
  env: getDecoratorEnvironment(),
  params: {
    context: "privatperson",
    language: language,
    breadcrumbs: [
      {
        title: text.minSide[language],
        url: MIN_SIDE_URL,
      },
      {
        title: text.utkast[language],
        url: MIN_SIDE_URL,
      },
    ],
    availableLanguages: [
      {
        locale: "nb",
        url: `${MIN_SIDE_URL}utkast/nb`,
        handleInApp: false,
      },
      {
        locale: "en",
        url: `${MIN_SIDE_URL}utkast/en`,
        handleInApp: false,
      },
      {
        locale: "nn",
        url: `${MIN_SIDE_URL}utkast/nn`,
        handleInApp: false,
      },
    ],
  },
});
---

<!doctype html>
<html lang={language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Utkast</title>
    <link
      rel="preload"
      href="https://cdn.nav.no/aksel/@navikt/ds-css/6.16.2/index.min.css"
      as="style"
    />
    <link
      rel="stylesheet"
      href="https://cdn.nav.no/aksel/@navikt/ds-css/6.16.2/index.min.css"
    />
    <Decorator.HeadAssets />
  </head>
  <body class="main">
    <Decorator.Header />
    <div class={styles.container}>
      <slot />
    </div>
    <Decorator.Footer />
    <Decorator.Scripts />
  </body>
</html>