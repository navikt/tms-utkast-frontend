---
import Utkast from "@components/Utkast";
import type { Language } from "@language/text";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Utkast">
  <main class="main">
    <Utkast client:only="react" language={"en" as Language} />
  </main>
</Layout>

<style>
  .app {
    flex-direction: column;
    justify-content: center;
    align-items: center;
    display: flex;
    height: 100%;
    width: 100%;
    background-color: var(--a-bg-subtle);
    padding: 0;
    min-height: 600px;
    max-width: 912px;
    margin: 0 auto;
  }
  .main {
    max-width: none !important;
  }
</style>
